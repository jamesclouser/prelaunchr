<div class="hero">
  <div class="container-fluid">
    <div class="col-sm-10 col-sm-offset-2 col-md-7 col-md-offset-5 col-xs-12">

      <%= image_tag "homemaker/thank_you.png", class: "refer-header-image img-responsive" %>
